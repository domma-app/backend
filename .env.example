# ----------------------------
# DATABASE CONFIGURATION
# ----------------------------

# Local development database
DATABASE_URL="postgresql://<DB_USER>:<DB_PASSWORD>@localhost:5432/<DB_NAME>?schema=public"

# Example remote database URLs (for reference)
# DATABASE_URL="postgresql://<DB_USER>:<DB_PASSWORD>@<REMOTE_HOST>:5432/<DB_NAME>"
# DATABASE_URL="postgresql://<DB_USER>:<DB_PASSWORD>@<REMOTE_HOST>:5432/<DB_NAME>?pgbouncer=true"

# For Vercel Postgres
# DATABASE_URL="${POSTGRES_PRISMA_URL}?pgbouncer=true"
# DIRECT_URL="${POSTGRES_URL_NON_POOLING}"

# ----------------------------
# SERVER CONFIGURATION
# ----------------------------

PORT=5000
HOST="localhost"
NODE_ENV=development

# ----------------------------
# AUTHENTICATION
# ----------------------------

JWT_SECRET="<YOUR_JWT_SECRET>"

# ----------------------------
# MIDTRANS PAYMENT GATEWAY
# ----------------------------

MIDTRANS_SERVER_KEY="<YOUR_MIDTRANS_SERVER_KEY>"
MIDTRANS_CLIENT_KEY="<YOUR_MIDTRANS_CLIENT_KEY>"
MIDTRANS_IS_PRODUCTION=false

# ----------------------------
# SUPABASE CONFIGURATION
# ----------------------------

SUPABASE_URL="https://<YOUR_PROJECT_REF>.supabase.co"
SUPABASE_KEY="<YOUR_SUPABASE_ANON_KEY>"
SUPABASE_SERVICE_KEY="<YOUR_SUPABASE_SERVICE_ROLE_KEY>"

